<%- include('partials/header') %>

    <div class="login-container">
        <h2 style="text-align: center; margin-bottom: 2rem; font-size: 1.5rem;">Access Control</h2>

        <% if (typeof error !=='undefined' ) { %>
            <div class="error-msg">
                <%= error %>
            </div>
            <% } %>

                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 100%;">Authenticate</button>
                </form>

                <div style="text-align: center; margin-top: 1rem;">
                    <a href="/" style="color: var(--text-secondary); font-size: 0.9rem;">Back to Dashboard</a>
                </div>
    </div>

    <%- include('partials/footer') %>