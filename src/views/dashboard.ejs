<%- include('partials/header') %>

    <main>
        <!-- Services Section -->
        <section>
            <h2 class="section-title">Applications & Services</h2>
            <div id="servicesGrid" class="grid">
                <% services.forEach(service=> { %>
                    <div data-id="<%= service.id %>" class="card sortable-item"
                        onclick="window.open('<%= service.url %>', '_blank')">
                        <% if (service.isPrivate) { %>
                            <span class="badge">PRIVATE</span>
                            <% } %>

                                <% if (user && user.role==='admin' ) { %>
                                    <div class="card-admin-controls">
                                        <button class="admin-btn edit-btn"
                                            onclick="event.stopPropagation(); editService(<%= service.id %>)"
                                            title="Edit">
                                            <i class="fa-solid fa-pen"></i>
                                        </button>
                                        <button class="admin-btn delete-btn"
                                            onclick="event.stopPropagation(); deleteService(<%= service.id %>)"
                                            title="Delete">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                        <div class="drag-handle" title="Drag to reorder">
                                            <i class="fa-solid fa-grip-vertical"></i>
                                        </div>
                                    </div>
                                    <% } %>
                                        <div class="card-icon">
                                            <i class="fa-solid <%= service.icon %>"></i>
                                        </div>
                                        <h3>
                                            <%= service.title %>
                                        </h3>
                                        <p>
                                            <%= service.description %>
                                        </p>
                    </div>
                    <% }); %>

                        <% if (services.length===0) { %>
                            <div
                                style="grid-column: 1/-1; text-align: center; padding: 2rem; color: var(--text-secondary);">
                                No services available or visible.
                            </div>
                            <% } %>

                                <!-- Add Button (Admin only) -->
                                <% if (user && user.role==='admin' ) { %>
                                    <div class="card" onclick="openAddServiceModal()"
                                        style="border-style: dashed; justify-content: center; align-items: center; cursor: pointer; opacity: 0.6; min-height: 200px;">
                                        <div class="card-icon" style="margin-bottom: 0;">
                                            <i class="fa-solid fa-plus"></i>
                                        </div>
                                        <h3>Add Service</h3>
                                    </div>
                                    <% } %>
            </div>
        </section>

        <!-- Portfolio Section -->
        <section>
            <h2 class="section-title">GitHub Portfolio</h2>
            <div id="projectsGrid" class="grid">
                <% projects.forEach(project=> { %>
                    <div data-id="<%= project.id %>" class="card sortable-item" style="cursor: pointer;"
                        onclick="openProjectFromCard(this)" data-name="<%= project.name %>"
                        data-description="<%= project.description %>" data-language="<%= project.language %>"
                        data-url="<%= project.url %>">

                        <% if (user && user.role==='admin' ) { %>
                            <div class="card-admin-controls">
                                <button class="admin-btn edit-btn"
                                    onclick="event.stopPropagation(); editProject(<%= project.id %>)" title="Edit">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                                <button class="admin-btn delete-btn"
                                    onclick="event.stopPropagation(); deleteProject(<%= project.id %>)" title="Delete">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                                <div class="drag-handle" title="Drag to reorder">
                                    <i class="fa-solid fa-grip-vertical"></i>
                                </div>
                            </div>
                            <% } %>

                                <div class="card-icon">
                                    <i class="fa-brands fa-github"></i>
                                </div>
                                <h3>
                                    <%= project.name %>
                                </h3>
                                <p>
                                    <%= project.description %>
                                </p>
                                <div class="card-meta">
                                    <span><i class="fa-solid fa-code"></i>
                                        <%= project.language %>
                                    </span>
                                    <span><i class="fa-solid fa-star"></i>
                                        <%= project.stars %>
                                    </span>
                                </div>
                    </div>
                    <% }); %>

                        <!-- Add Project Button (Admin only) -->
                        <% if (user && user.role==='admin' ) { %>
                            <div class="card" onclick="openAddProjectModal()"
                                style="border-style: dashed; justify-content: center; align-items: center; cursor: pointer; opacity: 0.6; min-height: 200px;">
                                <div class="card-icon" style="margin-bottom: 0;">
                                    <i class="fa-solid fa-plus"></i>
                                </div>
                                <h3>Add Project</h3>
                            </div>
                            <% } %>
            </div>
        </section>

        <!-- SPECIAL PORTFOLIO SECTION -->
        <!-- ##EDIT HERE## Manual Edit: This section fetches from your special repo -->
        <section>
            <h2 class="section-title">About Me (Portfolio)</h2>
            <div class="card" style="min-height: auto;">
                <div class="card-admin-controls"
                    style="opacity: 1; position: static; margin-bottom: 1rem; color: var(--text-secondary); font-size: 0.8rem;">
                    <i class="fa-solid fa-wrench"></i> Manual Edit: Fetching from slogiker/slogiker/README.md
                </div>
                <div id="portfolioContent" class="readme-content">
                    <div class="loading"><i class="fa-solid fa-spinner fa-spin"></i> Loading Portfolio...</div>
                </div>
            </div>
        </section>
    </main>

    <!-- Project Details Modal -->
    <div id="projectModal" class="modal-overlay">
        <div class="modal">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle">Project Title</h3>
                <button class="modal-close" onclick="closeModal()">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div class="modal-description" id="modalDescription">
                Project description goes here.
            </div>
            <div class="modal-meta">
                <span id="modalLanguage"><i class="fa-solid fa-code"></i> Language</span>
                <span id="modalStars"><i class="fa-solid fa-star"></i> <span>0</span> Stars</span>
            </div>
            <div id="readmeSection" class="readme-content">
                <div class="loading"><i class="fa-solid fa-spinner fa-spin"></i> Loading README...</div>
            </div>
            <div class="modal-actions">
                <a href="#" id="modalLink" target="__blank" class="btn btn-primary">View Repository</a>
            </div>
        </div>
    </div>

    <!-- Add Service Modal -->
    <div id="addServiceModal" class="modal-overlay">
        <div class="modal">
            <div class="modal-header">
                <h3 class="modal-title">Add New Service</h3>
                <button class="modal-close" onclick="closeAddServiceModal()">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <form action="/services/add" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required placeholder="e.g. My Server">
                </div>
                <div class="form-group">
                    <label for="url">URL</label>
                    <input type="text" id="url" name="url" required placeholder="http://localhost:8080">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" placeholder="Short description">
                </div>
                <div class="form-group">
                    <label for="icon">Icon Class (FontAwesome)</label>
                    <input type="text" id="icon" name="icon" placeholder="fa-solid fa-server">
                </div>
                <div class="form-group" style="display: flex; align-items: center; gap: 0.5rem;">
                    <input type="checkbox" id="isPrivate" name="isPrivate" style="width: auto;">
                    <label for="isPrivate" style="margin-bottom: 0;">Private (Login required)</label>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-outline" onclick="closeAddServiceModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Service</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // ##EDIT HERE## Manual Edit: Configure initialization and portfolio settings
        document.addEventListener('DOMContentLoaded', () => {
            initializeSortable();
            fetchPortfolio();
        });

        // --- Drag & Drop Initialization ---
        function initializeSortable() {
            // ##EDIT HERE## Manual Edit: Change animation speed or drag handle selector
            const sortableOptions = {
                animation: 150,
                handle: '.drag-handle',
                ghostClass: 'sortable-ghost',
                dragClass: 'sortable-drag',
                onEnd: function (evt) {
                    const itemEl = evt.item;
                    const list = itemEl.parentElement;
                    const isService = list.id === 'servicesGrid';

                    const order = Array.from(list.querySelectorAll('.sortable-item')).map(item => item.dataset.id);

                    // Send new order to backend
                    const endpoint = isService ? '/services/reorder' : '/projects/reorder';
                    fetch(endpoint, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ order })
                    }).catch(err => console.error('Error reordering:', err));
                }
            };

            const servicesGrid = document.getElementById('servicesGrid');
            const projectsGrid = document.getElementById('projectsGrid');

            if (servicesGrid) new Sortable(servicesGrid, sortableOptions);
            if (projectsGrid) new Sortable(projectsGrid, sortableOptions);
        }

        // --- Portfolio Functionality ---
        async function fetchPortfolio() {
            const portfolioContent = document.getElementById('portfolioContent');
            try {
                // ##EDIT HERE## Manual Edit: Change the repository path for your profile README
                const response = await fetch('https://api.github.com/repos/slogiker/slogiker/readme');
                if (response.ok) {
                    const data = await response.json();
                    const content = atob(data.content);
                    portfolioContent.innerHTML = parseMarkdown(content);
                } else {
                    portfolioContent.innerHTML = '<p class="text-center">Could not load portfolio content.</p>';
                }
            } catch (error) {
                console.error('Portfolio fetch error:', error);
                portfolioContent.innerHTML = '<p class="text-center">Failed to load portfolio.</p>';
            }
        }

        function parseMarkdown(text) {
            // Helper to parse key markdown elements into HTML
            return text
                .replace(/^### (.*$)/gim, '<h3>$1</h3>')
                .replace(/^## (.*$)/gim, '<h2>$1</h2>')
                .replace(/^# (.*$)/gim, '<h1>$1</h1>')
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/\*(.*?)\*/g, '<em>$1</em>')
                .replace(/`(.*?)`/g, '<code>$1</code>')
                .replace(/^\- (.*$)/gim, '<li>$1</li>')
                .replace(/\n\n/g, '</p><p>')
                .replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>')
                .replace(/!\[(.*?)\]\((.*?)\)/g, '<img src="$2" alt="$1" style="max-width:100%; border-radius: 8px;">')
                .replace(/\[(.*?)\]\((.*?)\)/g, '<a href="$2" target="_blank">$1</a>');
        }

        // --- Service Management ---
        function openAddServiceModal() {
            document.getElementById('addServiceModal').classList.add('active');
        }

        function closeAddServiceModal() {
            document.getElementById('addServiceModal').classList.remove('active');
        }

        function editService(id) {
            // Placeholder for future edit modal implementation
            // ##EDIT HERE## Manual Edit: Implement full edit modal logic here
            alert('Edit Service: ' + id + '\n(Full edit modal coming in future update)');
        }

        function deleteService(id) {
            if (confirm('Are you sure you want to delete this service?')) {
                fetch(`/services/${id}`, { method: 'DELETE' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) location.reload();
                    })
                    .catch(err => alert('Failed to delete service'));
            }
        }

        // --- Project Management ---
        function openProjectFromCard(card) {
            const name = card.getAttribute('data-name');
            const description = card.getAttribute('data-description');
            const language = card.getAttribute('data-language');
            const url = card.getAttribute('data-url');

            document.getElementById('modalTitle').textContent = name;
            document.getElementById('modalDescription').textContent = description;
            document.getElementById('modalLanguage').innerHTML = `<i class="fa-solid fa-code"></i> ${language}`;
            document.getElementById('modalLink').href = url;

            const readmeSection = document.getElementById('readmeSection');
            readmeSection.innerHTML = '<div class="loading"><i class="fa-solid fa-spinner fa-spin"></i> Loading README...</div>';

            document.getElementById('projectModal').classList.add('active');

            // Allow clicking to trigger fetch without navigating away if it's just opening modal
            // But link inside modal handles navigation

            // Fetch README logic reused from parseMarkdown but specific for this modal context
            fetch(url.replace('https://github.com/', 'https://api.github.com/repos/') + '/readme')
                .then(res => res.json())
                .then(data => {
                    const content = atob(data.content);
                    // Filter interesting parts as before
                    let interesting = '';
                    const features = content.match(/##?\s*[‚ú®üéØüìã]?\s*Features?\s*\n([\s\S]*?)(?=\n##|$)/i);
                    if (features) interesting += '<h3>‚ú® Features</h3>' + features[1].substring(0, 500);

                    const desc = content.match(/##?\s*(?:Description|About)\s*\n([\s\S]*?)(?=\n##|$)/i);
                    if (desc) interesting += '<h3>üìù About</h3>' + desc[1].substring(0, 300);

                    if (!interesting) interesting = content.split('\n').slice(0, 5).join(' ');

                    readmeSection.innerHTML = parseMarkdown(interesting);
                })
                .catch(() => {
                    readmeSection.innerHTML = '<p class="text-center text-muted">No README available</p>';
                });
        }

        function editProject(id) {
            // ##EDIT HERE## Manual Edit: Implement full edit modal logic here
            alert('Edit Project: ' + id + '\n(Full edit modal coming in future update)');
        }

        function deleteProject(id) {
            if (confirm('Are you sure you want to delete this project?')) {
                fetch(`/projects/${id}`, { method: 'DELETE' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) location.reload();
                    })
                    .catch(err => alert('Failed to delete project'));
            }
        }

        function openAddProjectModal() {
            // ##EDIT HERE## Manual Edit: Implement add project modal
            alert('Add Project Modal coming soon');
        }

        function closeModal() {
            document.getElementById('projectModal').classList.remove('active');
        }

        // Global Event Listeners
        window.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal-overlay')) {
                e.target.classList.remove('active');
            }
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                document.querySelectorAll('.modal-overlay.active').forEach(m => m.classList.remove('active'));
            }
        });
    </script>

    <%- include('partials/footer') %>
